<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Difficulty</th>
      <th>Ball count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.description %></td>
        <td><%= request.difficulty %></td>
        <td><%= request.ball_count %></td>
        <%= form_tag "Submit", remote: true do %>
           <td><%= button_to "Submit",   Siteswap.create(description: request.description, difficulty: request.difficulty, image_url:request.name + ".gif", name: request.name, ball_count: request.ball_count) %></td>
        <% end %>
       <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= button_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
